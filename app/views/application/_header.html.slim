#header
  .wrapper
    .logo = link_to image_tag("logo.png"), root_path
    .title a simple life and fulture
    ul
      li = link_to '首页', root_path
      li = link_to '博客列表', articles_path
      li = link_to '生活＆旅行', 'javascript:'
      li = link_to '关于我', 'javascript:'

/javascript:
  $(function(){
    var o_li = $("#header .wrapper ul li");
    o_li.eq(0).find("a").addClass("active");
    o_li.each(function(){
      $(this).find("a").click(function(){
        $(this).addClass("active").parent().siblings().find("a").removeClass("active");
      })
    });
  });